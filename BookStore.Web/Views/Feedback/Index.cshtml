@model FeedbackVM


<h2 class="text-info">Product Feedback</h2>

<form action="" method="post">

    <div class="p-4 border rounded row">
        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label>Comment title</label>
                </div>
                <div class="col-4">
                    <input asp-for="CommentTitle" readonly class="form-control" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label>Comment</label>
                </div>
                <div class="col-4">
                    @Html.TextArea("Comment", Model.Comment, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label>Rating</label>
                </div>
                <div class="col-4">
                    <input asp-for="Rating" readonly class="form-control" />
                </div>
            </div>

        </div>
    </div>

    <br />

    <div class="form-group">
        <a asp-controller="Home" asp-action="Index" class="btn btn-success">Back to Home</a>
    </div>

</form>