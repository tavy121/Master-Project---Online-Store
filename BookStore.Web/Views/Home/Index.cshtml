@model IEnumerable<ProductVM>

@{  ViewData["Title"] = "Home Page";
    var detailsRoute = "/Details/{0}";
    var feedbackRoute = "/Feedback/{0}";
}

<div class="row">

    @foreach (var product in Model)
    {
<div class="col-4">
    <div class="card mb-4">

        <div class="card-header">
            <h4 class="my-0 font-weight-normal">
                <label style="font-size:3vw; color:darkred;">@product.Name</label>
            </h4>
        </div>

        <img class="card-img-top" style="height:70%" src="~/@product.ImagePath" alt="no image" />

        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <label style="font-size:20px; color:#a51313"><b>$@product.Price</b></label>
                </div>
                <a href="@string.Format(detailsRoute, product.Id)" class="btn pull-right btn-outline-info">View Details</a>

                <a href="@string.Format(feedbackRoute, product.Id)" class="btn btn-danger fa-pull-left btn-outline-info">View Feedback</a>
            </div>
        </div>

    </div>
</div>}

</div>